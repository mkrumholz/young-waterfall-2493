<h1><%= @movie.title %></h1>

<p>Year created: <%= @movie.creation_year %></p>
<p>Genre: <%= @movie.genre %></p>

<h3>All Actors</h3>

<% @actors.each do |actor| %>
  <p><%= actor.name %></p>
<% end %>

<h3>Add an actor to this movie:</h3>
<%= form_with url: "/movies/#{@movie.id}/actors", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit 'Submit' %>
<% end %>
